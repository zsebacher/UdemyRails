<div class="portfolio"> 
    <div class="container text-center">
        <%= image_tag @portfolio_item.main_image %>

        <h1 class="portfolio-title"><%= @portfolio_item.title %></h1>

        <p><em><%= @portfolio_item.subtitle %></em></p>

        <p class="text-left"><%= @portfolio_item.body %></p>

        <h2>Technologies Used:</h2>

        <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
        <% end %>
    </div>
</div>