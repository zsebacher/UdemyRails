<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
        <div class="card-title text-center portfolio-link">
            <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item), class: "portfolio-link" %>
        </div>
        <div class="card-body">
            <p class="text-center"><%= portfolio_item.subtitle %></p>
            <p><%= portfolio_item.body %></p>
            <div class="d-flex justify-content-between align-items-center">
                <% if logged_in?(:site_admin) %>
                    <div>
                        <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-primary" %>
                        <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>